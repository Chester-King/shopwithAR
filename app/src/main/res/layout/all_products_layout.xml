<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="5dp"
    card_view:contentPadding="2dp"
    >
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/variant1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="5dp"
            card_view:contentPadding="2dp"
            android:layout_below="@id/producttxtVariant"
            android:layout_toEndOf="@id/ProductImageView"
            android:layout_marginLeft="5dp"
            android:backgroundTint="@color/colorPrimary">

            <TextView
                android:id="@+id/var1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S"
                android:paddingRight="3dp"
                android:paddingLeft="3dp"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/variant3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="5dp"
            card_view:contentPadding="2dp"
            android:layout_below="@id/producttxtVariant"
            android:layout_toEndOf="@id/variant2"
            android:layout_marginLeft="5dp"
            android:backgroundTint="@color/colorPrimary">

            <TextView
                android:id="@+id/var3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S"
                android:paddingRight="3dp"
                android:paddingLeft="3dp"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/variant4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="5dp"
            card_view:contentPadding="2dp"
            android:layout_below="@id/producttxtVariant"
            android:layout_toEndOf="@id/variant3"
            android:layout_marginLeft="5dp"
            android:backgroundTint="@color/colorPrimary">

            <TextView
                android:id="@+id/var4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S"
                android:paddingRight="3dp"
                android:paddingLeft="3dp"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/variant5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="5dp"
            card_view:contentPadding="2dp"
            android:layout_below="@id/producttxtVariant"
            android:layout_toEndOf="@id/variant4"
            android:layout_marginLeft="5dp"
            android:backgroundTint="@color/colorPrimary">

            <TextView
                android:id="@+id/var5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S"
                android:paddingRight="3dp"
                android:paddingLeft="3dp"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/variant6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="5dp"
            card_view:contentPadding="2dp"
            android:layout_below="@id/producttxtVariant"
            android:layout_toEndOf="@id/variant5"
            android:layout_marginLeft="5dp"
            android:backgroundTint="@color/colorPrimary">

            <TextView
                android:id="@+id/var6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S"
                android:paddingRight="3dp"
                android:paddingLeft="3dp"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/variant7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="5dp"
            card_view:contentPadding="2dp"
            android:layout_below="@id/producttxtVariant"
            android:layout_toEndOf="@id/variant6"
            android:layout_marginLeft="5dp"
            android:backgroundTint="@color/colorPrimary">

            <TextView
                android:id="@+id/var7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="3dp"
                android:paddingLeft="3dp"
                android:text="S"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/variant2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="5dp"
            card_view:contentPadding="2dp"
            android:layout_below="@id/producttxtVariant"
            android:layout_toEndOf="@id/variant1"
            android:layout_marginLeft="5dp"
            android:backgroundTint="@color/colorPrimary">

            <TextView
                android:id="@+id/var2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S"
                android:paddingRight="3dp"
                android:paddingLeft="3dp"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>

        </android.support.v7.widget.CardView>




        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/productShopIcon"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:src="@mipmap/shop_icon"
            android:scaleType="centerCrop"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="shop name here"
            android:id="@+id/productShopName"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@id/productShopIcon"
            android:textSize="16sp"/>

        <View android:layout_height="1dp"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_below="@+id/productShopIcon"
            android:id="@+id/line_below_productShopName" />

        <ImageView
            android:id="@+id/ProductImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop"
            android:layout_below="@+id/line_below_productShopName"
            android:src="@drawable/cart_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In Stock:"
            android:layout_below="@id/ProductImageView"
            android:layout_alignStart="@id/ProductImageView"
            android:layout_marginTop="5dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="2dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:id="@+id/productlimitstocklabel"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18"
            android:layout_below="@id/ProductImageView"
            android:layout_toRightOf="@+id/productlimitstocklabel"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="0dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:id="@+id/productStockLimitText"
            />

        <TextView
            android:id="@+id/producttxtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ProductImageView"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/ProductImageView"
            android:layout_toRightOf="@+id/ProductImageView"

            android:text="Title"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:lines="1"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/producttxtVariant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ProductImageView"
            android:layout_below="@id/producttxtTitle"
            android:layout_marginLeft="5dp"
            android:paddingBottom="5dp"
            android:text="Item Variant"
            />

        <TextView
            android:id="@+id/producttxtPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@id/productdiscountedtxtPrice"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/producttxtDiscount"
            android:text="ori Price"
            />

        <TextView
            android:id="@+id/producttxtDiscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@id/productdiscountedtxtPrice"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@id/ProductImageView"
            android:text="-xxx% off"
            android:textColor="@color/White"
            android:background="@drawable/red_circle"
            android:padding="2dp"
            />

        <TextView
            android:id="@+id/productOffer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@id/producttxtDiscount"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@id/ProductImageView"
            android:text="-xxx% off"
            android:textColor="@color/White"
            android:background="@drawable/red_circle"
            android:padding="2dp"
            />


        <TextView
            android:id="@+id/productdiscountedtxtPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ProductImageView"
            android:layout_below="@id/variant1"
            android:layout_marginLeft="5dp"
            android:text="discounted Price"
            android:padding="5dp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent" />

        <ImageView
            android:id="@+id/ratingImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/productlimitstocklabel"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            app:srcCompat="@android:drawable/btn_star_big_on" />

        <TextView
            android:id="@+id/ratingValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/ProductImageView"
            android:layout_marginEnd="59dp"
            android:textStyle="bold"
            android:text="5.0"
            android:textSize="20dp"
            android:textColor="@android:color/black"/>

        <View android:layout_height="1dp"
            android:background="@color/colorLightGray"
            android:layout_width="match_parent"
            android:layout_below="@+id/productOffer"
            android:id="@+id/endLine"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"/>


    </RelativeLayout>

</RelativeLayout>

</android.support.v7.widget.CardView>